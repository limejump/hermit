{
  "name": "hermit",
  "version": "0.1.1",
  "description": "A service to enable client side logging using Humio without revealing secrets",
  "author": "Arran France <arran@arranfrance.com>",
  "license": "MIT",
  "keywords": [
    "humio",
    "logging",
    "microservice"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "NODE_ENV=development nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/platform-express": "^6.0.0",
    "@types/dotenv": "^6.1.0",
    "@types/jsonwebtoken": "^8.3.2",
    "compression": "^1.7.3",
    "dotenv": "^7.0.0",
    "helmet": "^3.16.0",
    "jsonwebtoken": "^8.5.1",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/node": "^12.6.8",
    "@types/supertest": "^2.0.7",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "mocked-env": "^1.2.4",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "typescript": "^3.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format && yarn lint && git add .",
      "pre-push": "yarn test && yarn test:e2e"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}